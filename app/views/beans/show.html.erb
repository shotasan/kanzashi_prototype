<h1><%= "#{@bean.name}の詳細" %></h1>
<div class="container">
  <p id="notice"><%= notice %></p>

  <% if @favorites.present? %>
    <%= link_to 'お気に入り解除する', favorite_bean_path(id: @favorites), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorite_beans_path(bean_id: @bean), method: :post, class: 'btn btn-primary' %>
  <% end %>

  <%= link_to '戻る', :back, class: "btn btn-danger" %>

  <%= render "showbean", coffee: @bean %>

  <div class="row">
    <div class="col-6">
      <%= render "tastes/showtaste", coffee: @bean %>
    </div>
    <div class="col-6">
      <%= render "tastes/taste_chart", coffee: @bean %>
    </div>
  </div>

  <% if post_user?(@bean) %>
    <%= link_to '編集', edit_bean_path(@bean), class: "btn btn-success" %>
    <%= link_to '削除', bean_path(@bean), method: :delete, data: { confirm: "「#{@bean.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger' %>
  <% end %>
</div>
