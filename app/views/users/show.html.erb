<h1>Users#show</h1>

<p>名前 : <%= @user.name %></p>
<p><%= image_tag @user.icon.url %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<h2>自分の記録</h2>
<% @user.beans.each do |bean| %>
  <%= render "beans/show", bean: bean %>
<% end %>

<h2>お気に入り一覧</h2>
<% @favorites.each do |favorite| %>
  <%= render "beans/show", bean: favorite %>
<% end %>