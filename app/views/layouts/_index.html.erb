<table>
  <thead>
  <tr>
    <th>name</th>
    <th>description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% beans&.each do |bean| %>
    <tr>
      <td><%= bean.name %></td>
      <td><%= bean.description %></td>
      <td><%= link_to 'Show', bean %></td>
<!--      BeanかMyBlendかでURLを分岐-->
      <td><%= link_to 'Edit', bean.class == Bean ? edit_bean_path(bean) : edit_my_blend_path(bean) %></td>
      <td><%= link_to 'Destroy', bean, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>